<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>EMI_mandatory_before_Disbursement</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Loan_Status__c, &quot;Disbursed&quot;),
  ISBLANK(EMI_Amount__c)
)</errorConditionFormula>
    <errorMessage>Please calculate and add the EMI amount before disbursing the loan.</errorMessage>
</ValidationRule>
